<% content_for(:title, "Edit Section | Rebuild This Site!") %>
<h1>Rebuild This Site!</h1>
<br>
<h2>Edit Section <%= @section.number %></h2>

<%= render('layouts/errors', :object => @section) %>

<h3>Enter the following information about the section:</h3>
<form action="/sections/<%= @section.number %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <%= render('form') %>
  <br><button style="background-color:yellow">Update section <%= @section.number %></button>
</form><br>
  <button style="background-color:red"><a href="/sections/<%= @section.number %>"
        data-confirm="Are you sure you want to delete this section? It will delete all associated lessons!"
        data-method="delete" rel="nofollow">Delete section <%= @section.number %></a></button>
<br><br>
<h4><a href="/sections/new">Create a new section</a></h4>
<h4><a href="/lessons/new">Create a new lesson</a></h4>
<% if @section.previous != nil %>
<h4><a href="/sections/<%= @section.previous.number %>/show">Show the previous section</h4>
<% end %>
<% if @section.next != nil %>
<h4><a href="/sections/<%= @section.next.number %>/show">Show the next section</h4>
<% end %>
<h4><a href="/lessons">Table of Contents</a></h4>
